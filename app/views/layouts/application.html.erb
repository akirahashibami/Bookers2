<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-left">
        <span>Bookers</span>
      </div>
      <nav>
        <ul class="header-left">
        <% if user_signed_in? %>
          <li><span class="glyphicon glyphicon-home" aria-hidden="true"></span><%= link_to "Home", "#" %></li>
          <li><span class="glyphicon glyphicon-user" aria-hidden="true"></span><%= link_to "Users", "#" %></li>
          <li><span class="glyphicon glyphicon-book" aria-hidden="true"></span><%= link_to "Books", books_path %></li>
          <li><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><span class="glyphicon glyphicon-home" aria-hidden="true"></span><%= link_to "Home", root_path %></li>
          <li><span class="glyphicon glyphicon-link" aria-hidden="true"></span><%= link_to "About", home_about_path %></li>
          <li><span class="glyphicon glyphicon-edit" aria-hidden="true"></span><%= link_to "sign up", new_user_registration_path %></li>
          <li><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span><%= link_to "login", new_user_session_path %></li>
        <% end %>
        </ul>
      </nav>
    </header>

    <%= yield %>

    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
